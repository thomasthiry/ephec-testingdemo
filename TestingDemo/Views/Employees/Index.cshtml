@model IEnumerable<TestingDemo.ViewModels.EmployeeListItem>

@{
    ViewBag.Title = "List";
}

<h2>Employee List</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, new { id = "create_new" })
</p>
<table class="table" id="employee_list">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BirthDate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BirthDate)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }, new { @class="link_edit" }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id }, new { @class = "link_delete" })
        </td>
    </tr>
}

</table>
